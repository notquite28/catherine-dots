# Zinit
ZINIT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zinit/zinit.git"
[ ! -d $ZINIT_HOME ] && mkdir -p "$(dirname $ZINIT_HOME)"
[ ! -d $ZINIT_HOME/.git ] && git clone https://github.com/zdharma-continuum/zinit.git "$ZINIT_HOME"
source "${ZINIT_HOME}/zinit.zsh"

# Load OMZ plugins
zinit lucid wait'0' for \
  OMZP::git \
  OMZP::sudo

# Load completions and highlighting
# zinit wait lucid for \
#   atinit"ZINIT[COMPINIT_OPTS]=-C; zicompinit; zicdreplay" \
#     zdharma-continuum/fast-syntax-highlighting \
#   blockf \
#     zsh-users/zsh-completions \
#   atload"!_zsh_autosuggest_start" \
#     zsh-users/zsh-autosuggestions

zinit light zdharma-continuum/fast-syntax-highlighting
zinit light zsh-users/zsh-completions
zinit light zsh-users/zsh-autosuggestions

# Smart package installer
function in {
    local -a arch=() aur=()
    
    for pkg in "$@"; do
        pacman -Si "$pkg" &>/dev/null && arch+=("$pkg") || aur+=("$pkg")
    done
    
    (( ${#arch[@]} )) && sudo pacman -S "${arch[@]}"
    (( ${#aur[@]} )) && yay -S "${aur[@]}"
}

# Tmux aliases
alias tm='tmux attach -t default || tmux new -s default'
alias tl='tmux list-sessions'
alias ta='tmux attach -t'
alias tn='tmux new -s'
alias tk='tmux kill-session -t'

# General aliases
alias c='clear'
alias vc='code'
alias mkdir='mkdir -p'

# eza (ls replacement)
alias l='eza -lh --icons=auto'
alias ls='eza -1 --icons=auto'
alias ll='eza -lha --icons=auto --sort=name --group-directories-first'
alias ld='eza -lhD --icons=auto'
alias lt='eza --icons=auto --tree'

# Package management
alias un='yay -Rns'
alias up='yay -Syu'
alias pl='yay -Qs'
alias pa='yay -Ss'
alias pc='yay -Sc'

# Remove orphaned packages
function po {
    local orphans=$(yay -Qtdq)
    [[ -n "$orphans" ]] && echo "$orphans" | yay -Rns - || echo "No orphaned packages"
}

# Directory navigation
alias ..='cd ..'
alias ...='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
alias .5='cd ../../../../..'

# Environment
export EDITOR=nvim
export PNPM_HOME="$HOME/.local/share/pnpm"
[[ ":$PATH:" != *":$PNPM_HOME:"* ]] && export PATH="$PNPM_HOME:$PATH"

# Integrations
eval "$(zoxide init zsh)"
eval "$(oh-my-posh init zsh --config $HOME/.config/ohmyposh/config.toml)"

export CARAPACE_BRIDGES='zsh,fish,bash,inshellisense'
zstyle ':completion:*' format $'\e[2;37mCompleting %d\e[m'
autoload -Uz compinit && compinit
source <(carapace _carapace)

# Splash
fastfetch
